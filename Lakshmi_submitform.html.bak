				<option value="Select University">Select your University</option>
				<option value="WIU">Western Illinois University</option>
				<option value="UNT">University of North Texas</option>
				<option value="UCM">University of Central Missouri</option>
				<option value="SEMU">SouthEast Missouri University</option>
				<option value="EST">Eastern Illinois University</option>

			</select>
			<br>
			<br>
			<input type="submit" value="Submit">
		</form>
	</body>
</html>
